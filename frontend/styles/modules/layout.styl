body
  margin 0
  // font-family Arial
  font-family "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  color darken(#fff, 60)
  font-weight 100

.header
  position fixed
  width 100%
  height 35px
  box-sizing border-box
  border-bottom 1px solid darken(#fff, 11)
  background #fff

.footer
  height 100px


.content
  @extend $clearfix
  padding 35px 0 0
  // background red
  @media screen and (min-width: 1200px)
    width 1200px
    margin 0 auto

//sections
//home
.home
  // border-top 1px solid black
  padding 20px 0 0


.cards
  overflow hidden


.cards-col
  @extend $c1-1
  float left
  padding 0 5px 10px
  box-sizing border-box
  img
    display block
    width 100%
    // background _green
    border 0px

  @media screen and (min-width: 400px)
    width 50%
  @media screen and (min-width: 600px)
    width 33.3%
  @media screen and (min-width: 800px)
    width 25%
  // @media screen and (min-width: 1000px)
  //   width 20%

.card
  // box-shadow 0 1px 2px darken(#fff, 30)
  padding 0 0 10px
  background #fff
  // border-radius 2px
  overflow hidden
  box-sizing border-box

  h2
    margin 0
    font-size 17px
    padding 10px 5px 0
    // text-transform capitalize
    font-weight 100
    color darken(#fff, 90)

  p
    margin 0
    padding 5px 5px 0
    font-size 14px
    font-weight 100
    color darken(#fff, 50)


.card-info
  height 120px
  border 1px solid darken(#fff, 11)
  border-top none

//detail
.detail
  padding 20px 0 0
  margin 10px auto 0
  width 100%
  padding 0 5px
  box-sizing border-box
  @media screen and (min-width: 910px)
    width 920px


.detail-main
  @extend .clearfix
  padding-bottom 10px

  @media screen and (min-width: 600px)
    padding-right 310px

.detail-post-col
  width 100%
  margin-bottom 10px
  // background red
  box-shadow 0 1px 2px _silver
  @media screen and (min-width: 600px)
    float left

.detail-aside-col
  width 300px
  background yellow
  @media screen and (min-width: 600px)
    float right
    margin-right -310px

.post
  h1
    font-weight 100
    font-size 33px
    color darken(#fff, 85)

  p
    font-size 16px
