$btn
  display inline-block
  margin-bottom 0 // For input.btn
  font-weight 100
  text-align center
  vertical-align middle
  cursor pointer
  background-image none // Reset unusual Firefox-on-Android default style see https//github.com/necolas/normalize.css/issues/214
  border 1px solid transparent
  white-space nowrap
  user-select none
  box-sizing border-box
  text-decoration none
  padding 0



//home next/back buttons
.btn-group
  height 55px
  margin 0 auto
  @media screen and (min-width: 600px)
    width 50%

.btn-back-col
  width 33%
  float left
  height 10px
  box-sizing border-box
  padding 0 5px 0 5px

.btn-next-col
  width 67%
  float left
  height 10px
  box-sizing border-box
  padding 0 5px 0 5px


.btn-next
.btn-back
  @extend $btn
  width 100%
  height 55px
  border 1px solid darken(#fff, 11)
  font-size 14px


